{
  "name": "@casaub0n/tsbox",
  "version": "1.0.0",
  "description": "TypeScript sandbox for me",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/casaub0n/casaub0n",
    "directory": "packages/tsbox"
  },
  "author": {
    "name": "casaub0n",
    "email": "netzach.yoshida@gmail.com",
    "url": "https://github.com/casaub0n"
  },
  "main": "./dist/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "test": "vitest run",
    "test:ci": "pnpm test",
    "test:export": "vitest --reporter=html",
    "rmdist": "rimraf dist",
    "build": "pnpm rmdist && tsup src/index.ts --format cjs --dts",
    "start:tsbox": "pnpm build && node dist/index.js",
    "lint": "eslint ./src"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "TypeScript",
    "vitest",
    "tsup"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@casaub0n/eslint-config": "workspace:*",
    "@types/node": "22.13.1",
    "@vitest/ui": "3.0.5",
    "rimraf": "6.0.1",
    "tsup": "8.3.6",
    "typescript": "5.7.3",
    "vitest": "3.0.5"
  },
  "dependencies": {
    "zod": "3.24.1"
  }
}
