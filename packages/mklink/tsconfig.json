{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "bundler",
    "allowJs": true,
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./scripts"]
}
