{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "test": {
      "outputs": ["__report__/**"]
    },
    "test:ci": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false
    },
    "start": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    }
  },
  "globalDependencies": ["**/.env.*local", "**/.env.*ci"],
  "globalEnv": ["VERCEL_URL", "RENDER_INTERNAL_HOSTNAME", "PORT", "CHROME", "TABLE_HEAD"]
}
